<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#81E4E4E4"
    android:layout_height="match_parent"
    tools:context=".DangNhapDangKy">

    // Hình tròn nền
// thông tin phần mềm
    // update l
    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="300dp"ại
        android:layout_marginStart="-150dp"
        android:layout_marginBottom="-150dp"
        android:background="@drawable/maunendangnhapdangky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="163dp"
        android:layout_height="173dp"
        android:layout_marginEnd="-120dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/maunendangnhapdangky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    //dòng chữ dưới cùng

    <TextView
        android:id="@+id/textView"
        android:layout_width="479dp"
        android:layout_height="431dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-290dp"
        android:layout_marginEnd="-50dp"
        android:background="@drawable/maunendangnhapdangky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/logoapp"
        android:layout_width="400dp"
        android:layout_height="235dp"
        android:layout_marginTop="-80dp"
        android:background="@drawable/logoapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutgioithieu"
        android:layout_width="405dp"
        android:layout_height="539dp"
        android:layout_marginBottom="37dp"
        android:height="445dp"
        android:background="@drawable/blue_button_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/logoapp"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="3dp">


        <TextView
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Giới Thiệu App"
            android:textColor="#1C538E"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="310dp"
            android:layout_height="294dp"
            android:text="Hiện nay, việc tìm phòng trọ khá mệt mỏi, nhất là ở những ngày nắng nóng, những ngày mưa rét gây bất tiện và khó khăn trong việc tìm phòng trọ,nhất là đối với sinh viên hay cả những người đi làm.  Với thời kỳ xã hội phát triển như hiện nay thì mọi vấn đề khó khăn đó đều được giải quyết qua chiếc điện thoại thông minh. Tìm nhà trọ qua các app là khá tiện dụng.Việc tìm phòng trọ qua các trang mạng xã hội như facebook, zalo, instagram,... là khá phổ biến như hiện nay.Chính vì vậy sử dụng App để tìm nhà trọ là khá hợp lí, lại đảm bảo mọi thông tin chuẩn xác nhất." />

        <LinearLayout
            android:layout_width="322dp"
            android:layout_height="26dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Team WorK"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="47dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ten1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Lê Ngọc Huy"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/ten2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Hoàng Tuấn Đạt" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="42dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ten3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nguyễn Duy Tài" />

                    <TextView
                        android:id="@+id/ten4"
                        android:layout_width="116dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Nguyễn Trường Giang" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Phần mềm được xây dựng bới AETH Team"
            android:textColor="#757575"
            android:textSize="11dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:background="#757575" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>